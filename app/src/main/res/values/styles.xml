<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="transparentText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor" >#00000000</item>
    </style>

    <style name="IndexHeaderSort">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/item_text</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="sortListItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RankStyle">
        <item name="android:width">30dp</item>
        <item name="android:fontFamily">@font/kanit</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="topThreeTextSize">60dp</item>
        <item name="normalTextSize">30dp</item>
    </style>

    <style name="FilterStyle">
        <item name="android:letterSpacing">-0.06</item>
        <item name="android:padding">8dp</item>
        <item name="android:strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">14sp</item>
        <item name="outlineWidth">1dp</item>
        <item name="clearIcon">@drawable/ic_tag_clear</item>
        <item name="foreground">?selectableItemBackground</item>
        <item name="showIcons">true</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>

