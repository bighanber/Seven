<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_news_list_cover"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        tools:background="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_news_list_title"
        android:layout_toEndOf="@id/iv_news_list_cover"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        style="@style/sortListItemStyle"
        tools:text="title"/>

    <TextView
        android:id="@+id/tv_news_list_authors"
        android:layout_toEndOf="@id/iv_news_list_cover"
        android:layout_below="@id/tv_news_list_title"
        style="@style/sortListItemStyle"
        tools:text="authors" />


    <TextView
        android:id="@+id/tv_create_time"
        android:layout_alignBottom="@+id/iv_news_list_cover"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        tools:text="time"
        style="@style/sortListItemStyle"/>
</RelativeLayout>